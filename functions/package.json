    "start-watch-dev": "tsc-watch --onSuccess \"node --env-file=.env ./lib/index.js\""
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "firebase-functions": "^6.0.1",
    "celebrate": "^15.0.3",
    "dayjs": "^1.11.18",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "file-type": "^21.0.0",
    "firebase": "^12.2.1",
    "firebase-admin": "^13.5.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "tsc-watch": "^7.1.1",
    "typescript": "^5.9.2"
  },
