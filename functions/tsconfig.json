{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "rootDir": "src",
    "outDir": "lib",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noUnusedLocals": true
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}